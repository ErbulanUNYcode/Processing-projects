void stone(int x,int y,int lvl)
{
  if(lvl<0)
  {
    stroke(255);
    fill(0);
  }
  else
  {
    stroke(0);
    fill(255);
  }
  rect(width/Fsize*x+width/50,
         height/2-width/2+width/Fsize*y+width/50,
         width/Fsize-width/25,
         width/Fsize-width/25);
  float s=(width/Fsize-width/25)/12;
  int mrr=1,a=12;
  if(lvl<0){mrr=-1;a=0;}
  lvl=abs(lvl)-1;
  for(int i=0;i<stones[lvl].length;i++)
  {
    line(width/Fsize*x+width/50+
         (a-stones[lvl][i][0][0]*mrr)*s,
         height/2-width/2+width/Fsize*y+width/50+
         (a-stones[lvl][i][0][1]*mrr)*s,
         width/Fsize*x+width/50+
         (a-stones[lvl][i][1][0]*mrr)*s,
         height/2-width/2+width/Fsize*y+width/50+
         (a-stones[lvl][i][1][1]*mrr)*s);
  }
}

